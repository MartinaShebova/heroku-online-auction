<div class="row">
<div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    <form role="form">
        <fieldset>
            <h3>Login</h3>
            <hr class="colorgraph">
            <div class="form-group">
                <input type="email" name="email" id="email" class="form-control input-md" placeholder="Email Address">
            </div>
            <div class="form-group">
                <input type="password" name="password" id="password" class="form-control input-md" placeholder="Password">
            </div>
            <hr class="colorgraph">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12">
                    <button id="btn-login" class="btn btn-md btn-success btn-block">Login</button>
                </div>
            </div>
            <hr class="colorgraph">
            <p class="col-sm-5 custom-padding">Don't have an account?</p>
            <a class="btn btn-sm btn-danger col-sm-3" href="#/register">Register</a>
        </fieldset>
    </form>
</div>
</div>

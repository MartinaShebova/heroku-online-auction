<div class="container-fluid">
    <div class="row profile">
		<div class="col-md-3">
			<div class="profile-sidebar">
				<!-- SIDEBAR USERPIC -->
				<div class="profile-userpic">
					<img src="{{user.imageUrl}}" class="img-responsive img-rounded" alt="User Pic">
				</div>
				<!-- END SIDEBAR USERPIC -->
				<!-- SIDEBAR USER TITLE -->
				<div class="profile-usertitle">
					<div class="profile-usertitle-name text-center">
						<h3>{{user.firstname}} {{user.lastname}}</h3>
					</div>
				</div>
				<!-- END SIDEBAR USER TITLE -->
				<!-- SIDEBAR MENU -->
				<div class="profile-usermenu">
					<ul class="nav">
						<li class="active">
							<a href="#">
							<i class="glyphicon glyphicon-home"></i>
							E-mail: {{user.email}}</a>
						</li>
						<li>
							<a href="#">
							<i class="glyphicon glyphicon-user"></i>
							Address: {{user.address}}</a>
						</li>
						<li>
							<a href="#" target="_blank">
							<i class="glyphicon glyphicon-ok"></i>
							Mobile Number: {{user.mobileNumber}}</a>
						</li>
					</ul>
				</div>
				<!-- END MENU -->
			</div>
		</div>
		<div class="col-md-9">
            <div class="profile-content">
			   <div class="row">
                    <div class="col-sm-12">
                        <div class="well well-sm text-center color-red">
                            My Auctions
                        </div>
                    </div>
                </div>
                {{#each user.sells}}
                <div class="row">
                    <div class="col-sm-12">
                        <div class="col-sm-3">
                            <img class="sell-picture" src="{{sellImageUrl}}" alt="user auction picture">
                        </div>
                        <div class="col-sm-9">
                            <ul class="list-group">
                                <li class="list-group-item"><a href="#/sells/{{sellId}}">{{sellTitle}}</a></li>
                                <li class="list-group-item">{{sellCurrentPrice}} $</li>
                                <li class="list-group-item">{{sellCurrentDate}}</li>
                            </ul>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
		</div>
	</div>
</div>
        